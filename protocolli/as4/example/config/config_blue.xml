<openspcoop2 xmlns="http://www.openspcoop2.org/core/config"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.openspcoop2.org/core/config config.xsd">
    

    <soggetto tipo="AS4" nome="Blue">
        
        <!-- Esempio SOAP -->
        <porta-applicativa nome="SoapExample/testXml" stateless="abilitato">
            <servizio tipo="AS4" nome="SoapExample"/>
            <azione nome="testXml"/>
            <servizio-applicativo nome="TRACE"/>
        </porta-applicativa>
        <porta-applicativa nome="SoapExample/test" stateless="abilitato">
            <servizio tipo="AS4" nome="SoapExample"/>
            <azione nome="test"/>
            <servizio-applicativo nome="TRACE"/>
        </porta-applicativa>

        <!-- Esempio REST -->
        <porta-applicativa nome="RestExample/test" stateless="abilitato">
            <servizio tipo="AS4" nome="RestExample"/>
            <azione nome="test"/>
            <servizio-applicativo nome="TRACE"/>
        </porta-applicativa>
        <porta-applicativa nome="RestExample/test2" stateless="abilitato">
            <servizio tipo="AS4" nome="RestExample"/>
            <azione nome="test2"/>
            <servizio-applicativo nome="TRACE"/>
        </porta-applicativa>
        
        
        <servizio-applicativo nome="TRACE">
            <invocazione-servizio>
                <connettore tipo="http" nome="connettore di test">
                    <property nome="location" valore="http://localhost:8080/TestService/ping?saveMessageDir=/var/tmp/AS4"/>
                </connettore>
            </invocazione-servizio>
        </servizio-applicativo>
        
        
    </soggetto>
    
    <configurazione>
        <accesso-registro>
            <registro nome="registroXML" tipo="xml" location="/etc/openspcoop2/registroServizi.xml"
            />
        </accesso-registro>
        <inoltro-buste-non-riscontrate cadenza="60"/>
        <messaggi-diagnostici severita-log4j="infoIntegration" severita="infoIntegration"/>
        <tracciamento buste="abilitato" dump="abilitato"/>
    </configurazione>
    
</openspcoop2>
