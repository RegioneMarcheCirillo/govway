<?xml version="1.0" encoding="iso-8859-1"?>
<project name="OpenSPCoop" default="" basedir=".">
	<description>
        File di Script per la compilazione o l'esecuzione del Client
    </description>

	<import file="./local_env.xml" />
	<property name="required_lib" value="${rootDir}/lib" />
	<property name="dist_openspcoop" value="${rootDir}/core/dist"/>
	<property name="dist_spcoop" value="${rootDir}/protocolli/spcoop/dist"/>



	<!-- Ripulisce la distribuzione -->
	<target name="clean">
		<delete dir="build"/>
	</target>

	<!-- Create the build directory structure used by compile -->
	<target name="init_compile">
		<mkdir dir="build" />
	</target>



	<!-- Compilazione del Client -->
	<target name="build" depends="init_compile"
        description="compila il Client" >
		<!-- Compile the java code  -->
		<javac includeantruntime="false" destdir="build" debug="true">
			<src path="src"/>
			<classpath>
				<path refid="classpath"/>
			</classpath>
		</javac>
	</target>


	<!-- Run the Client -->
	<target name="run" depends=""
        description="Esegue il Client" >
		<!-- Run the java code  -->
		<java classname="org.openspcoop2.core.registry.wsdl.testsuite.Testsuite" fork="false">
			<arg value="${parameter}" />
			<classpath>
				<path refid="classpath" />
				<pathelement path="build"/>
			</classpath>
		</java>

	</target>

	<!-- Classpath -->
	<path id="classpath">
		<fileset dir="${required_lib}/cxf" includes="*.jar"/>
		<fileset dir="${required_lib}/jax" includes="jaxb*.jar"/>
		<fileset dir="${required_lib}/axis14" includes="axis-1.4.jar"/>
		<fileset dir="${required_lib}/axis14" includes="axis-jaxrpc-1.4.jar"/>
		<fileset dir="${required_lib}/axis14" includes="axis-saaj-1.4.jar"/>
		<fileset dir="${required_lib}/log" includes="log4j-1.2.16.jar"/>
		<fileset dir="${required_lib}/shared" includes="wsdl4j-1.6.2.jar"/>
		<fileset dir="${required_lib}/shared" includes="xercesImpl-2.9.1.jar"/>
		<fileset dir="${required_lib}/shared" includes="activation-1.1.1.jar"/>
		<fileset dir="${required_lib}/commons" includes="commons-logging-1.2.jar"/>
		<fileset dir="${required_lib}/commons" includes="commons-discovery-0.5.jar"/>
		<fileset dir="${required_lib}/jibx" includes="jibx-run-1.2.6.jar"/>
		<fileset dir="${required_lib}/javax" includes="*.jar"/>
		<fileset dir="${dist_openspcoop}" includes="*.jar"/>
		<fileset dir="${dist_spcoop}" includes="*.jar"/>
	</path>



</project>
