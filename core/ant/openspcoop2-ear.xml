			<zipfileset dir="${required_lib}/security" prefix="lib" >
				<include name="bcprov-ext-jdk15on-152.jar"/>
				<include name="bcpkix-jdk15on-152.jar"/>
				<include name="neethi-3.0.2.jar"/>
				<include name="opensaml-2.5.1-1.jar"/>
				<include name="openws-1.4.2-1.jar"/>
				<include name="wss4j-1.6.10.jar"/>
