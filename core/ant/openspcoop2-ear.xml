			</zipfileset>
			<zipfileset dir="${required_lib}/jibx" prefix="lib" >
				<include name="bcel-6.0.jar"/>
				<include name="jibx-run-1.2.6.jar"/>
				<include name="xpp3-1.2.6.jar"/>
