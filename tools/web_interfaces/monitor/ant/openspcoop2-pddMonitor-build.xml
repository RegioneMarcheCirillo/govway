<project name="openspcoop2-compile-pddMonitor">
    <description>
        Produzione dei jar relativi al package org.openspcoop2.web.monitor
    </description>

	<import file="${openspcoop2}/ant/commons/svn-build.xml" />
	<import file="${openspcoop2}/ant/commons/compile-build.xml" />
	<import file="${openspcoop2}/ant/commons/api-build.xml" />
	
	<!-- estensione di ant (if .... ) -->
	<taskdef resource="net/sf/antcontrib/antlib.xml">
          <classpath>
              <pathelement location="${required_lib}/ant/ant-contrib-1.0b3.jar"/>
          </classpath>
	</taskdef>
	

	<!-- Compilazione della libreria 'org.openspcoop.web.ctrlstat.*' -->
	<target name="compile_openspcoop2_pddMonitor" description="compila la libreria org.openspcoop.web.ctrlstat.*">

		<if>
			<istrue value="${buildPddMonitor}"/>
			<then>
		
				<!-- Info svn -->
				<runtarget target="checksvn" />
				
				<!-- org.openspcoop2.web.monitor -->
				<var name="packagesCompiled" value="org.openspcoop2.web.monitor" />
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.web.monitor.config" />	
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.web.monitor.core" />	
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.web.monitor.costanti" />	
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.web.monitor.dao" />	
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.web.monitor.driver" />	
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.web.monitor.dto" />	
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.web.monitor.servlet" />
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.web.monitor.servlet.ac" />
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.web.monitor.servlet.apc" />
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.web.monitor.servlet.aps" />
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.web.monitor.servlet.archivi" />
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.web.monitor.servlet.audit" />
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.web.monitor.servlet.config" />
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.web.monitor.servlet.connettori" />
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.web.monitor.servlet.login" />
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.web.monitor.servlet.monitor" />
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.web.monitor.servlet.operazioni" />
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.web.monitor.servlet.pa" />
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.web.monitor.servlet.pd" />
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.web.monitor.servlet.pdd" />
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.web.monitor.servlet.ruoli" />
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.web.monitor.servlet.sa" />
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.web.monitor.servlet.soggetti" />
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.web.monitor.servlet.utenti" />
				<antcall target="compile_src_openspcoop2">
					<param name="compile_src_openspcoop2.SVNINFO" value="${svnant.jar.presente}"/>
					<param name="compile_src_openspcoop2.SRC_DIR" value="${src_pddMonitor}"/>
					<param name="compile_src_openspcoop2.SVN_ID_NAME" value="web-pddMonitor"/>
					<param name="compile_src_openspcoop2.BUILD_INCLUDES" value="**/*.java"/>
					<param name="compile_src_openspcoop2.SRC_PREFIX" value=""/>
					<param name="compile_src_openspcoop2.PACKAGE" value="org.openspcoop2.web.monitor"/>
					<param name="compile_src_openspcoop2.DIST_DIR_NAME" value="."/>
					<param name="dist" value="${dist_pddMonitor}"/>
					<param name="build" value="${build_pddMonitor}"/>
				</antcall>
				
				<!-- Jar Complessivo -->
				<!--<antcall target="jar_2_jar_openspcoop2">
					<param name="compile_src_openspcoop2.SVNINFO" value="${svnant.jar.presente}"/>
					<param name="compile_src_openspcoop2.SVN_ID_NAME" value="web-pddMonitor"/>
					<param name="compile_src_openspcoop2.DIST_DIR_NAME" value="."/>
					<param name="dist" value="${dist_pddMonitor}"/>
					<param name="build" value="${build_pddMonitor}"/>
				</antcall>-->
				
				<!-- API -->
				<if>
					<istrue value="${buildAPI}"/>
					<then>
						<mkdir dir="${doc_pddMonitor}"/>
					</then>
				</if>
				<antcall target="compile_api_openspcoop2">
					<param name="compile_src_openspcoop2.PACKAGES" value="${packagesCompiled}"/>
					<param name="compile_src_openspcoop2.API_NAME" value="web-pddMonitor"/>
					<param name="compile_src_openspcoop2.API_DIR" value="${doc_pddMonitor}/api"/>
					<param name="compile_src_openspcoop2.SVNINFO" value="${svnant.jar.presente}"/>
					<param name="src" value="${src_pddMonitor}"/>
					<param name="doc" value="${doc_pddMonitor}"/>
					<param name="dist" value="${dist_pddMonitor}"/>
				</antcall>
				
			</then>
		</if>
		
	</target>
	
</project>
