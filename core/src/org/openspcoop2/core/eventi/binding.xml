<?xml version="1.0" encoding="UTF-8"?>
<binding force-classes="true">
  <mapping name="evento" class="org.openspcoop2.core.eventi.Evento">
    <namespace uri="http://www.openspcoop2.org/core/eventi" default="elements"/>
    <value name="tipo" field="tipo" usage="required"/>
    <value name="codice" field="codice" usage="required"/>
    <value name="severita" field="severita" usage="required"/>
    <value name="ora-registrazione" field="oraRegistrazione" usage="required"/>
    <value name="descrizione" field="descrizione" usage="optional"/>
    <value name="id-transazione" field="idTransazione" usage="optional"/>
    <value name="id-configurazione" field="idConfigurazione" usage="optional"/>
    <value name="configurazione" field="configurazione" usage="optional"/>
    <value name="cluster-id" field="clusterId" usage="optional"/>
  </mapping>
  <mapping name="dati-evento-generico" class="org.openspcoop2.core.eventi.DatiEventoGenerico">
    <namespace uri="http://www.openspcoop2.org/core/eventi" default="elements"/>
    <value name="id-evento" field="idEvento" usage="optional"/>
    <value name="data" field="data" usage="optional"/>
    <value name="descrizione" field="descrizione" usage="optional"/>
    <value name="dati-consumati-thread" field="datiConsumatiThread" usage="optional"/>
    <value name="codice-evento" field="codiceEvento" usage="optional"/>
  </mapping>
</binding>
