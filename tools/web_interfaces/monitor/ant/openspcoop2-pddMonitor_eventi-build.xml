<project name="openspcoop2-compile-pddMonitor-eventi">
    <description>
        Produzione dei jar relativi al package org.openspcoop2.web.monitor.eventi
    </description>

	<import file="${openspcoop2}/ant/commons/svn-build.xml" />
	<import file="${openspcoop2}/ant/commons/compile-build.xml" />
	<import file="${openspcoop2}/ant/commons/api-build.xml" />
	<import file="openspcoop2-pddMonitor-build.xml" />
	
	<!-- estensione di ant (if .... ) -->
	<taskdef resource="net/sf/antcontrib/antlib.xml">
          <classpath>
              <pathelement location="${required_lib}/ant/ant-contrib-1.0b3.jar"/>
          </classpath>
	</taskdef>
	

	<!-- Compilazione della libreria 'org.openspcoop.web.ctrlstat.*' -->
	<target name="compile_openspcoop2_pddMonitor_eventi" description="compila la libreria org.openspcoop.web.monitor.eventi.*">

		<!-- Creo faces-config.xml -->
		<antcall target="buildFacesConfig">
			<param name="srcFacesConfigDir" value="${src_eventi_pddMonitor}/META-INF"/>
		</antcall>

		<if>
			<istrue value="${buildPddMonitor}"/>
			<then>
		
				<!-- Info svn -->
				<runtarget target="checksvn" />
				
				<!-- org.openspcoop2.web.monitor -->
				<var name="packagesCompiled" value="org.openspcoop2.web.monitor" />
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.web.monitor.eventi.bean" />		
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.web.monitor.eventi.dao" />	
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.web.monitor.eventi.datamodel" />
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.web.monitor.eventi.mbean" />
				<antcall target="compile_src_openspcoop2">
					<param name="compile_src_openspcoop2.SVNINFO" value="${svnant.jar.presente}"/>
					<param name="compile_src_openspcoop2.SRC_DIR" value="${src_eventi_pddMonitor}/"/>
					<param name="compile_src_openspcoop2.SVN_ID_NAME" value="web-pddMonitor-eventi"/>
					<param name="compile_src_openspcoop2.BUILD_INCLUDES" value="**/*.java"/>
					<param name="compile_src_openspcoop2.SRC_INCLUDES" value="META-INF/faces-config.xml"/>
					<param name="compile_src_openspcoop2.SRC_INCLUDES_2" value="META-INF/conf/spring/*"/>
					<param name="compile_src_openspcoop2.SRC_PREFIX" value=""/>
					<param name="compile_src_openspcoop2.PACKAGE" value="org.openspcoop2.web.monitor.eventi"/>
					<param name="compile_src_openspcoop2.DIST_DIR_NAME" value="."/>
					<param name="dist" value="${dist_pddMonitor}"/>
					<param name="build" value="${build_pddMonitor}"/>
				</antcall>
				
				<!-- Jar Complessivo -->
				<!--<antcall target="jar_2_jar_openspcoop2">
					<param name="compile_src_openspcoop2.SVNINFO" value="${svnant.jar.presente}"/>
					<param name="compile_src_openspcoop2.SVN_ID_NAME" value="web-pddMonitor-eventi"/>
					<param name="compile_src_openspcoop2.DIST_DIR_NAME" value="."/>
					<param name="dist" value="${dist_pddMonitor}"/>
					<param name="build" value="${build_pddMonitor}"/>
				</antcall>-->
				
				<!-- API -->
				<if>
					<istrue value="${buildAPI}"/>
					<then>
						<mkdir dir="${doc_pddMonitor}"/>
					</then>
				</if>
				<antcall target="compile_api_openspcoop2">
					<param name="compile_src_openspcoop2.PACKAGES" value="${packagesCompiled}"/>
					<param name="compile_src_openspcoop2.API_NAME" value="web-pddMonitor-eventi"/>
					<param name="compile_src_openspcoop2.API_DIR" value="${doc_pddMonitor}/api/eventi"/>
					<param name="compile_src_openspcoop2.SVNINFO" value="${svnant.jar.presente}"/>
					<param name="src" value="${src_eventi_pddMonitor}"/>
					<param name="doc" value="${doc_pddMonitor}"/>
					<param name="dist" value="${dist_pddMonitor}"/>
				</antcall>
				
			</then>
		</if>
		
	</target>
	
</project>
