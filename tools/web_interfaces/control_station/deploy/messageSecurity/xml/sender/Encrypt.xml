<config id="messageSecurity.xml.sender.encrypt" label="XML Encrypt" xmlns="http://www.openspcoop2.org/core/mvc/properties"
	provider="org.openspcoop2.security.message.xml.SecurityProvider">

	 <compatibility not="false" and="false">
         <tags and="true">
                 <tag>REST</tag>
                 <tag>REQUEST</tag>
                 <tag>PD</tag>
         </tags>
         <tags and="true">
                 <tag>REST</tag>
                 <tag>RESPONSE</tag>
                 <tag>PA</tag>
         </tags>
	 </compatibility>
	
	<properties>
		<collection name="encryptionTrustStorePropRefId"/>
		<collection name="encryptionPropRefId"/>
	</properties>
	
	<section label="Encryption">
		
		<item type="hidden" name="securityEngine" value="xml">
			<property name="securityEngine" force="true"/>
		</item>
				
		<item type="hidden" name="encryptionAction" value="Encrypt">
			<property name="action" force="true"/>
		</item>
		
		<item type="checkbox" name="encryptionSymmetricKey" label="Symmetric Key" default="false" reloadOnChange="true" >
			<property name="encryptionSymmetricKey" />
		</item>
		
		<item type="select" name="encryptionSymAlgorithm" label="Symmetric Algorithm">
			<property name="encryptionSymAlgorithm" />
		</item>
		<item type="select" name="signatureDigestAlgorithm" label="Digest Algorithm">
			<property name="signatureDigestAlgorithm" />
		</item>
		<item type="select" name="signatureC14nAlgorithm" label="Canonicalization Algorithm">
			<property name="signatureC14nAlgorithm" />
		</item>
		
		<item type="checkbox" name="signatureKeyInfo" label="Key Info" default="false" reloadOnChange="true" >
			<property name="signatureKeyInfo" />
		</item>
		<item type="select" name="signatureKeyInfoSelect" label="Tipo" default="x509">
			<conditions>
                   <condition>
                           <selected name="signatureKeyInfo" />
                   </condition>
           	</conditions>
			<values>
				<value value="x509" label="x509"/>
				<value value="RSA" label="RSA"/>
			</values>
			<property name="keyInfo" />
		</item>
		<item type="text" name="signatureKeyInfoAlias" label="Alias Certificato">
			<conditions>
                   <condition>
                           <selected name="signatureKeyInfo" />
                   </condition>
           	</conditions>
		     <property name="keyInfoAlias" />
		</item>

		<subsection label="KeyStore">
			<conditions>
                   <condition>
                           <selected name="encryptionSymmetricKey" />
                   </condition>
           	</conditions>
           	
			<item type="select" name="keystoreType" label="Tipo" default="jceks">
				<values>
					<!-- <value value="jks" label="JKS"/>
					<value value="pkcs12" label="PKCS12"/> -->
					<value value="jceks" label="JCEKS"/>
				</values>
				<property name="org.apache.ws.security.crypto.merlin.keystore.type" properties="encryptionPropRefId" />
			</item>
			<item type="text" name="keystoreFile" label="File" required="true">
			    <property name="org.apache.ws.security.crypto.merlin.file" properties="encryptionPropRefId" />
			</item>
			<item type="text" name="keystorePassword" label="Password" required="true">
			    <property name="org.apache.ws.security.crypto.merlin.keystore.password" properties="encryptionPropRefId" />
			</item>
			<item type="text" name="keystorePrivateKeyAlias" label="Alias Chiave Privata" required="true">
			    <property name="encryptionUser" /> 
			</item>
			<item type="text" name="keystorePrivateKeyPassword" label="Password Chiave Privata" required="true">
			    <property name="encryptionPassword" />
			</item>

		</subsection>
		
		<subsection label="TrustStore">
			<conditions>
                   <condition not="true">
                           <selected name="encryptionSymmetricKey" />
                   </condition>
           	</conditions>
           	
			<item type="select" name="truststoreType" label="Tipo" default="jks" >
				<values>
					<value value="jks" label="JKS"/>
					<value value="pkcs12" label="PKCS12"/>
					<!--  <value value="jceks" label="JCEKS"/> -->
				</values>
				<property name="org.apache.ws.security.crypto.merlin.keystore.type" properties="encryptionTrustStorePropRefId" />
			</item>
			<item type="text" name="truststoreFile" label="File" required="true">
			    <property name="org.apache.ws.security.crypto.merlin.file" properties="encryptionTrustStorePropRefId" />
			</item>
			<item type="text" name="truststorePassword" label="Password" required="true">
			    <property name="org.apache.ws.security.crypto.merlin.keystore.password" properties="encryptionTrustStorePropRefId" />
			</item>
			<item type="text" name="keystoreCertificateAlias" label="Alias Certificato" required="true">
			    <property name="encryptionUser" />
			</item>

		</subsection>

	</section>

</config>



