<openspcoop2 xmlns="http://www.openspcoop2.org/core/config"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.openspcoop2.org/core/config config.xsd">
    
    
    <soggetto tipo="as4" nome="Red">
        
        <!-- Esempio SOAP -->
        <porta-delegata nome="SoapExample/testXml" autenticazione="none" autorizzazione="none"
            integrazione="trasporto,urlBased,soap" stateless="abilitato">
            <soggetto-erogatore tipo="as4" nome="Blue"/>
            <servizio tipo="as4" nome="SoapExample"/>
            <azione nome="testXml"/>
        </porta-delegata>
        <porta-delegata nome="SoapExample/test" autenticazione="none" autorizzazione="none"
            integrazione="trasporto,urlBased,soap" stateless="abilitato">
            <soggetto-erogatore tipo="as4" nome="Blue"/>
            <servizio tipo="as4" nome="SoapExample"/>
            <azione nome="test"/>
        </porta-delegata>

        <!-- Esempio REST -->
        <porta-delegata nome="RestExample/test" autenticazione="none" autorizzazione="none"
            integrazione="trasporto,urlBased" stateless="abilitato">
            <soggetto-erogatore tipo="as4" nome="Blue"/>
            <servizio tipo="as4" nome="RestExample"/>
            <azione nome="test"/>
        </porta-delegata>
        <porta-delegata nome="RestExample/test2" autenticazione="none" autorizzazione="none"
            integrazione="trasporto,urlBased" stateless="abilitato">
            <soggetto-erogatore tipo="as4" nome="Blue"/>
            <servizio tipo="as4" nome="RestExample"/>
            <azione nome="test2"/>
        </porta-delegata>
         
    </soggetto>
  
    
    <configurazione>
        <accesso-registro>
            <registro nome="registroXML" tipo="xml" location="/etc/openspcoop2/registroServizi.xml"
            />
        </accesso-registro>
        <inoltro-buste-non-riscontrate cadenza="60"/>
        <messaggi-diagnostici severita-log4j="infoIntegration" severita="infoIntegration"/>
        <tracciamento buste="abilitato" dump="abilitato"/>
    </configurazione>
    
</openspcoop2>
