				<include name="*.jar"/>
			</zipfileset>
			<zipfileset dir="${required_lib}/spring-security" prefix="lib">
				<include name="*.jar"/>
			</zipfileset>
			<zipfileset dir="${required_lib}/soapbox" prefix="lib">
				<include name="*.jar"/>
			</zipfileset>
			<zipfileset dir="${required_lib}/httpcore" prefix="lib">
				<include name="*.jar"/>
			</zipfileset>
			<zipfileset dir="${required_lib}/stub/cxf" prefix="lib">
				<include name="openspcoop2_registrySearchStub_cxf.jar"/>
