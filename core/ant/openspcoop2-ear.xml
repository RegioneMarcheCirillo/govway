				<include name="soap.jar"/>
				<include name="wsdl4j-1.6.2.jar"/>
				<include name="uddi4j-2.0.5.jar"/>
				<include name="${xalan_jar}"/>
				<include name="${xalan_serializer_jar}"/>				
				<include name="velocity-1.6.4.jar"/>
				<include name="urlrewritefilter-4.0.3.jar"/>
				<include name="${concurrent_jar}"/>
				<include name="json-lib-2.4-jdk15.jar" /> <!--jmx mini console -->
				<include name="ezmorph-1.0.6.jar" /> <!--jmx mini console -->
				<include name="xom-1.2.7.jar" /> <!--jmx mini console -->
			</zipfileset>
			<zipfileset dir="${required_lib}/log" prefix="lib" >
				<include name="slf4j-api-1.6.2.jar"/>
				<include name="slf4j-jdk14-1.6.2.jar"/>
				<include name="${log4j_jar}"/>
			</zipfileset>
			<zipfileset dir="${required_lib}/jminix" prefix="lib">
				<include name="*.jar"/>
			</zipfileset>
			<zipfileset dir="${required_lib}/cxf" prefix="lib">
